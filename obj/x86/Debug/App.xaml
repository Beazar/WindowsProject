<Application
    x:Class="WindowsProject.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsProject"
    xmlns:view="using:WindowsProject.View">

    <Application.Resources>
        <DataTemplate x:Key="MainPageViewModel">
            <local:MainPage/>
        </DataTemplate>
        <DataTemplate x:Key="LijstViewModel">
            <view:LijstView/>
        </DataTemplate>
        <DataTemplate x:Key="DetailViewModel">
            <view:DetailView/>
        </DataTemplate>
    </Application.Resources>

</Application>

