        </SplitView.Pane>
        <SplitView.Content>
            <ContentControl x:ConnectionId='3' x:Name="mainContent" Content="{Binding CurrentData}" ContentTemplate="{Binding CurrentData.Template}"/>
        </SplitView.Content>

    </SplitView>
</Page>

